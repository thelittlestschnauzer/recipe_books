<div class="container">
  <h3 class="text-center bd4">Categories</h3>
</div>

<div class="container">
  <div class="card" style="width:400px">
    <% @categories.each do |category| %>
      <%= image_tag category.image %>
      <div class="card-body">
      <h4 class="card-title"><%= link_to category.name, category_recipes_path(@recipe, :category_id) %></h4>
      
    <% end %>
    </div><!-- card-body -->
  </div><!-- card -->
</div><!--