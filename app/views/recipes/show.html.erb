<div class="page-header">
    <span class="glyphicon glyphicon-list-alt"></span>

    <span class="glyphicon glyphicon-pencil"></span>

      <h1><%= @recipe.title %></h1>

      <p><%= @recipe.servings %> | <%= @recipe.level %></p>

      <% @recipe.ingredients.each do |ingredient| %>
        <p><%= ingredient.name %></p>
      <% end %>

      
</div>
<div class="images">
  <%= image_tag @recipe.image %>
</div>



<div class="links">
  <%= link_to "Edit Recipe", edit_category_recipe_path(@category, @recipe) %> | <%= link_to "Delete Recipe", category_recipe_path(@recipe), method: :delete  %>
</div>




